<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.elsalvador.parcial">

<uses-permission android:name="android.permission.INTERNET" />

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <!-- NEWS FRAGMENT -->
    <activity
        android:name=".Fragment.NewsFragment"
        android:label="news_fragment_name" />

    <!-- NAVIGATION DRAWER -->
    <activity
        android:name=".Activities.Main2Activity"
        android:label="@string/GN"
        android:theme="@style/AppTheme.NoActionBar" />

    <!-- LOGIN -->
    <activity android:name=".Activities.Login">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name=".Activities.Settings" />
    <activity android:name=".Activities.MostrarNoticias" />
    <activity android:name=".Activities.MostrarJugadores" />
    <activity android:name=".Activities.MostrarImagenes"></activity>
</application>

</manifest>